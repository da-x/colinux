+#ifndef CONFIG_COOPERATIVE
+	struct fuse_in *in = NULL;
+	struct fuse_forget_in *inarg = NULL;
+	unsigned int s = sizeof(struct fuse_in) + sizeof(struct fuse_forget_in);
