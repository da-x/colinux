+struct scsi_host_template coscsi_template = {
+	.module			= THIS_MODULE,
+	.name			= "Cooperative Linux SCSI Adapter",
+	.proc_name		= "coscsi",
+	.queuecommand		= coscsi_queue,
+	.can_queue		= COSCSI_CAN_QUEUE,
+	.this_id		= CO_MODULE_MAX_COSCSI,
+	.sg_tablesize		= 128,				/* XXX do not increase */
+	.cmd_per_lun		= COSCSI_CMDS_PER_LUN,
+	.use_clustering		= DISABLE_CLUSTERING,
+	.skip_settle_delay	= 1,
+};
