+printk_colxm:		
+	.asciz "syscall: %d\n"
+printk_colxm_after:
+	/* mini-mini-mini version of syscalltrack, hey muli */
+	cmp $3, %eax
+	jbe after_print
+	cmp $240, %eax
+	jb print_it
+	jmp after_print
+print_it:
+	push %eax
+	pushl %eax
+	pushl $printk_colxm
+	call printk
+	addl $8, %esp
+	popl %eax
+after_print:	
+#endif	
+#endif	
 	call *SYMBOL_NAME(sys_call_table)(,%eax,4)
 	movl %eax,EAX(%esp)		# save the return value
